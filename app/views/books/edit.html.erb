<main>
  <p id="notice"></p>
  <div class="container">
    <div class="row">
      <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
        <h1>Editing Book</h1>
        <div class="error_explanation">
          <% if @book != nil %>
            <% if @book.errors.any? %>
              <h3><%= @book.errors.count %>errors prohibited this obj from being saved</h3>
              <ul>
                <% @book.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
                <% end %>
              </ul>
            <% end %>
          <% end %>
        </div>
        <%= form_with model: @book do |f| %>
          <div class="form-group">
            <label for=book_title>Title</label><br>
            <%= f.text_field :title, style: "width: 100%", id:"book_title" %>
          </div>
          <div class="form-group">
            <label for="book_body">Opinion</label><br>
            <%= f.text_area :body, style: "width: 100%", id:"book_body" %>
          </div>
          <div class="form-group">
            <%= f.submit 'Update Book', class: "btn btn-success" %>
          </div>
        <% end %>
        <%= link_to "Show", book_path(params[:id]) %>
        /
        <%= link_to "Back", books_path %>
      </div>
    </div>
  </div>
</main>